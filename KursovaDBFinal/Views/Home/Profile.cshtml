@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
    ViewBag.Title = "Profile";
    Layout = "_Layout";
}

<h1>Profile</h1>

<div class="row" style="margin-top: 50px">
    <div class="col-md-8">
        <div>
            <h4>User</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Username
                </dt>
                <dd class="col-sm-10">
                    @User?.Identity?.Name
                </dd>
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-10">
                    @User?.FindFirstValue(ClaimTypes.Email)
                </dd>
                <dt class="col-sm-2">
                    Roles
                </dt>
                <dd class="col-sm-10">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @foreach (var claim in User.Claims.Where(c => c.Type == ClaimTypes.Role))
                        {
                            <span>@claim.Value</span>;
                        }
                    }
                </dd>
            </dl>
        </div>
        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
        {
            <div style="margin-top: 20px">
                <form asp-action="ExportEntities" method="post">
                    <input type="submit" value="Export Products to JSON" class="btn btn-primary"/>
                </form>
            </div>
            
        }
        <div style="margin-top: 10px">
            <a asp-action="Index">Back to Home</a>
        </div>
    </div>
    <div class="col-md-4">
        <img src="../assets/sanya2.jpg" width="400px" height="400px" alt="user photo"/>
    </div>
</div>

@if (TempData["ExportMessage"] != null)
{
    <div class="alert alert-success" style="margin-top: 20px">@TempData["ExportMessage"]</div>
}

@if (TempData["ExportError"] != null)
{
    <div class="alert alert-danger" style="margin-top: 20px">@TempData["ExportError"]</div>
}