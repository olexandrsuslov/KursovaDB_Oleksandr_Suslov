@{
    ViewData["Title"] = "Home Page";
}

<section class="hero">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide"><img src="assets/fridge.jpg" alt="Slide 1"></div>
            <div class="swiper-slide"><img src="assets/tv.jpg" alt="Slide 2"></div>
            <div class="swiper-slide"><img src="assets/microwave.jpg" alt="Slide 3"></div>
            <div class="swiper-slide"><img src="assets/fridge.jpg" alt="Slide 4"></div>
            <div class="swiper-slide"><img src="assets/tv.jpg" alt="Slide 5"></div>
            <div class="swiper-slide"><img src="assets/microwave.jpg" alt="Slide 6"></div>
            <div class="swiper-slide"><img src="assets/sanya.jpg" alt="Slide 7"></div>
            <!-- Add more slides as needed -->
        </div>
        <!-- Add pagination -->
        <div class="swiper-pagination" style="position: relative"></div>
    </div>
    <div class="hero-content mt-3">
        <h2>Welcome to HomeTech</h2>
        <p>Discover our wide range of household appliances.</p>
        <a class="btn" asp-area="" asp-controller="Appliance" asp-action="Index">Shop Now</a>
    </div>
</section>

<style>
    img {
        width: 300px;
        height: 300px;
    }
</style>

<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<script>
    var swiper = new Swiper('.swiper-container', {
        loop: true,
        autoplay: {
            delay: 5000, // milliseconds
        },
        pagination: {
            el: '.swiper-pagination',
            clickable: true,
        },
    });
</script>
